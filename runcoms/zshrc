# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# Source tmpzshrc
if [[ -s "${ZDOTDIR:-$HOME}/.tmpzshrc" ]]; then
    source "${ZDOTDIR:-$HOME}/.tmpzshrc"
fi

# Base16 Shell Color Theme
# Pick theme from: http://chriskempson.github.io/base16/
# Applies one of these themes each day.
THEMES="mocha.dark paraiso.dark bespin.dark solarized.dark railscasts.dark flat.dark londontube.dark atelierdune.dark atelierlakeside.dark"
CNT=`echo $THEMES | wc -w`
IND=$((`date +%j`%$CNT+1))
TODAY_THEME=`echo $THEMES | cut -d " " -f $IND`
BASE16_THEME_FILE="$HOME/.base16-shell/base16-$TODAY_THEME.sh"
[[ -s $BASE16_THEME_FILE ]] && source $BASE16_THEME_FILE
